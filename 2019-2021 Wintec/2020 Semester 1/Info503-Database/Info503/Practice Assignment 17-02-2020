CREATE TABLE SALESPERSON
(
sp_id number(8) PRIMARY KEY NOT NULL,
f_name VARCHAR(10) NOT NULL,
l_name VARCHAR(10) NOT NULL,
start_date DATE NOT NULL,
email VARCHAR(10) NOT NULL,
commission_rate number(2) NOT NULL
);

CREATE TABLE CUSTOMER
(
cust_id number(8) PRIMARY KEY NOT NULL,
f_name VARCHAR(10) NOT NULL,
l_name VARCHAR(10) NOT NULL,
gender CHAR(1),
address VARCHAR(15),
city VARCHAR(10),
phone NUMBER(10)
);

CREATE TABLE COLOUR
(
colour VARCHAR(8) PRIMARY KEY
);

CREATE TABLE VEHICLE
(
reg_no VARCHAR(6) PRIMARY KEY NOT NULL,
make VARCHAR(10) NOT NULL,
model VARCHAR(10) NOT NULL,
year NUMBER(4) NOT NULL,
colour VARCHAR(8) REFERENCES COLOUR(colour)
);

CREATE TABLE SALESDETAIL
(
invoice_no NUMBER(8) PRIMARY KEY NOT NULL,
date_sold DATE NOT NULL,
cust_id NUMBER(8) NOT NULL REFERENCES CUSTOMER(cust_id),
sp_id NUMBER(8) NOT NULL REFERENCES SALESPERSON(sp_id),
reg_no VARCHAR(6) NOT NULL REFERENCES VEHICLE(reg_no),
sale_price NUMBER(7,2) NOT NULL,
cost_price NUMBER(7,2) NOT NULL
);